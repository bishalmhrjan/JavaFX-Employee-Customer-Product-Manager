<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="750.0" prefWidth="200.0" styleClass="left_panel" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.admin.AdminMenuController">
<children>
    <VBox prefHeight="100.0" prefWidth="200.0" styleClass="logo_container" stylesheets="@../styles/adminMenu.css">
        <children>
            <FontAwesomeIconView glyphName="HOME" size="30" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="logo_container" text="Diya Hastakala">
                <font>
                    <Font size="18.0" />
                </font>
            </Text>
        </children>
    </VBox>
    <VBox layoutY="-1.0" prefHeight="512.0" prefWidth="202.0" styleClass="menu_container" stylesheets="@../styles/adminMenu.css" AnchorPane.bottomAnchor="118.0">
        <children>
            <Button fx:id="addProduct" mnemonicParsing="false" prefHeight="18.0" prefWidth="87.0" text="Add Product" />

            <Button fx:id="stateOfProducts" mnemonicParsing="false" text="State Of Products" />

            <MenuButton fx:id="businessChart" accessibleRole="BUTTON" lineSpacing="100.0" mnemonicParsing="false" text="Business Charts" >
              <items>

                  <MenuItem fx:id="dailyEarningChart" mnemonicParsing="false" text="Daily"  />
                  <MenuItem fx:id="weeklyEarningCharts" mnemonicParsing="false" text="Weekly" />
                  <MenuItem fx:id="monthlyEarningChart" mnemonicParsing="false" text="Monthly" />
                  <MenuItem fx:id="quarterlyEarningChart" mnemonicParsing="false" text="Quaterly" />
                  <MenuItem fx:id="halfYearlyEarningChart" mnemonicParsing="false" text="Half Yearly" />
                  <MenuItem fx:id="yearlyEarningChart" mnemonicParsing="false" text="Yearly" />


              </items>
               <opaqueInsets>
                  <Insets bottom="10.0" top="10.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MenuButton>
            <MenuButton fx:id="expenditureChart" mnemonicParsing="false" text="Expenditure Charts">


              <items>
                <MenuItem fx:id="dailyExpenditrueChart" mnemonicParsing="false" text="Daily" />
                  <MenuItem fx:id="weeklyExpenditrueChart" mnemonicParsing="false" text="Weekly" />
                <MenuItem fx:id="monthlyExpenditrueChart" mnemonicParsing="false" text="Monthly" />
                  <MenuItem fx:id="quarterlyExpenditrueChart" mnemonicParsing="false" text="Quarterly" />
                  <MenuItem fx:id="halfYearlyExpenditrueChart" mnemonicParsing="false" text="Half Yearly" />
                  <MenuItem fx:id="yearlyExpenditrueChart" mnemonicParsing="false" text="Yearly" />
              </items>
            </MenuButton>
            <Button fx:id="logOut" mnemonicParsing="false" text="Log Out" />
        </children>
    </VBox>
</children>
</AnchorPane>
