<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../styles/%20admin-style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.EmployeeProductDetailsController">
    <top>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Manage Products" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TableView fx:id="productTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="productIdColumn" prefWidth="106.0" text="Product ID" />
                <TableColumn fx:id="productNameColumn" prefWidth="81.0" text="Product Name" />
                <TableColumn fx:id="productTypeColumn" prefWidth="53.0" text="Product Type" />
                <TableColumn fx:id="priceColumn" text="Price" />
                <TableColumn fx:id="activeColumn" text="Active" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10.0;" styleClass="hbox">

             <Button fx:id="addProductButton" onAction="#handleAddProduct" text="Add Product" />
            <Button fx:id="editProductButton" onAction="#handleEditProduct" text="Edit Product" />
            <Button fx:id="deleteProductButton" onAction="#handleDeleteProduct" style="-fx-background-color: red;" text="Delete Product" />
        </HBox>
    </bottom>

</BorderPane>
