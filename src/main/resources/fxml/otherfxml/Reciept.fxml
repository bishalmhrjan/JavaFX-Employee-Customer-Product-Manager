<AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="add_product_detail" stylesheets="@../../styles/addProduct.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.admin.RecieptController">
   <children>
      <VBox layoutX="-7.0" layoutY="-72.0" prefHeight="668.0" prefWidth="593.0" styleClass="vbox" stylesheets="@../../styles/addProduct.css" translateY="40.0">
         <children>
            <HBox prefHeight="32.0" prefWidth="570.0" translateY="-40.0">
               <children>
                  <Label text="Product Name:" />
                  <ChoiceBox fx:id="productName" prefHeight="30.0" prefWidth="145.0" translateX="250.0" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="580.0" translateY="-30.0">
               <children>
                  <Label text="Product Type:" />
                  <ChoiceBox fx:id="productType" prefHeight="30.0" prefWidth="150.0" translateX="255.0" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0" translateY="-20.0">
               <children>
                  <Label prefHeight="23.0" prefWidth="110.0" text="Per Unit Price :" />
                  <TextField fx:id="sellUnitPrice" prefHeight="14.0" prefWidth="54.0" translateX="280.0" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0" translateY="-20.0">
               <children>
                  <Label prefHeight="23.0" prefWidth="111.0" text="No.of Stocks :" />
                  <TextField fx:id="noOfStocks" prefHeight="25.0" prefWidth="53.0" translateX="280.0" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0" translateY="-20.0">
               <children>
                  <Label prefHeight="23.0" prefWidth="190.0" text="total:" />
                  <TextField fx:id="total" prefHeight="14.0" prefWidth="54.0" translateX="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="200.0" translateY="-20.0">
               <children>
                  <Button fx:id="addProduct" mnemonicParsing="false" onAction="#addInTable" text="Add" />
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="250.0" prefWidth="588.0">
              <columns>
                  <TableColumn fx:id="productNameColumn" prefWidth="135.0" text="ProducktName" />
                <TableColumn fx:id="productTypeColumn" prefWidth="128.0" text="Product Type" />
                  <TableColumn fx:id="price" prefWidth="90.0" text="Price" />
                <TableColumn fx:id="noOfItems" prefWidth="120.0" text="No.of Items" />
                  <TableColumn fx:id="totalPriceOfSingleProduct" prefWidth="109.0" text="Total" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
