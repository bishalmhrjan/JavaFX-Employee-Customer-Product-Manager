<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="750.0" prefWidth="200.0" styleClass="left_panel" stylesheets="@../../styles/adminMenu.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.employee.EmployeeMenuController">

    <top>
        <VBox prefHeight="110.0" prefWidth="200.0" styleClass="logo_container" stylesheets="@../../styles/adminMenu.css">
            <children>
                <FontAwesomeIconView glyphName="HOME" size="30" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="logo_container" text="Diya Hastakala">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>
            </children>
        </VBox>
    </top>
    <left>
        <VBox layoutY="116.0" prefHeight="160.0" prefWidth="200.0" styleClass="menu_container" stylesheets="@../../styles/adminMenu.css">
            <children>
                 <Button fx:id="receipt" mnemonicParsing="false" prefHeight="20.0" prefWidth="200.0" text="Reciept" />
                <Button fx:id="search" mnemonicParsing="false" prefHeight="20.0" prefWidth="200.0" text="Search" />
                <Button fx:id="productDetails" mnemonicParsing="false" prefWidth="200.0" text="Product Details" onAction="#onProductDetailsClicked"/>
                <Button fx:id="logOut" mnemonicParsing="false" text="Log Out" prefWidth="200.0" onAction ="#onLogOutClick" />
            </children>
        </VBox>
</left>

</BorderPane>