<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.admin.AdminEmployeeManagementController">
    <top>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Manage Employees" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TableView fx:id="employeeTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="employeeIdColumn" text="ID" />
                <TableColumn fx:id="employeeUsernameColumn" text="Username" />
                <TableColumn fx:id="employeeFirstNameColumn" text="First Name" />
                <TableColumn fx:id="employeeLastNameColumn" text="Last Name" />
                <TableColumn fx:id="employeeEmailColumn" text="Email" />
                <TableColumn fx:id="employeeRolesColumn" text="Roles" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10.0;">
            <Button fx:id="addEmployeeButton" text="Add Employee" onAction="#handleAddEmployee" />
            <Button fx:id="editEmployeeButton" text="Edit Employee" onAction="#handleEditEmployee" />
            <Button fx:id="deleteEmployeeButton" text="Delete Employee" onAction="#handleDeleteEmployee" />
        </HBox>
    </bottom>
    <right>
        <VBox spacing="10.0" style="-fx-padding: 10.0;">
            <Label style="-fx-font-weight: bold;" text="Employee Details" />
            <GridPane hgap="5.0" vgap="5.0">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="firstNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="lastNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Roles:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="rolesTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10.0 0 0 0;">
                <Button fx:id="saveEmployeeDetailsButton" text="Save" onAction="#handleSaveEmployeeDetails" />
                <Button fx:id="cancelEmployeeDetailsButton" text="Cancel" onAction="#handleCancelEmployeeDetails" />
            </HBox>
        </VBox>
    </right>
</BorderPane>