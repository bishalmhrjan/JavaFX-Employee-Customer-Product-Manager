<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diyashop.controller.admin.AdminEmployeeManagementController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="User Role Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
    <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userIdColumn" text="User ID" />
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
            <TableColumn fx:id="rolesColumn" text="Current Roles" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
        <Label text="Roles for Selected User:" />
        <CheckBox fx:id="adminRoleCheckBox" text="Admin" />
        <Label text="Employee" /> </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="saveChangesButton" text="Save Changes" onAction="#handleSaveUserRoles" />
    </HBox>
</VBox>